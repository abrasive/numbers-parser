    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run experimental tests",
            "type": "python",
            "request": "test",
            "program": "/opt/homebrew/bin/pytest",
            "args": [
                "--experimental",
                "tests/test_all_formulas.py",
                "-o",
                "log_cli=True",
                "--log-cli-level=ERROR"
            ],
        },
        {
            "name": "Debug Unit Test incl. library code",
            "type": "python",
            "request": "test",
            "justMyCode": false,
        },
        {
            "name": "Debug Unit Test",
            "type": "python",
            "request": "test",
        },
        {
            "name": "Run tox",
            "type": "python",
            "request": "launch",
            "program": "/opt/homebrew/bin/tox",
            "console": "integratedTerminal"
        }
    ]
}