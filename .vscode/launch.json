    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run experimental tests",
            "type": "python",
            "request": "launch",
            "program": "/opt/homebrew/bin/pytest",
            "args": [
                "--experimental",
                "tests/test_formulas.py",
                "-o",
                "log_cli=True",
                "--log-cli-level=DEBUG"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Run tox",
            "type": "python",
            "request": "launch",
            "program": "/opt/homebrew/bin/tox",
            "console": "integratedTerminal"
        }
    ]
}